<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0f8ff"
    tools:context="com.example.nttr.quiz.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <ImageView
        android:id="@+id/contentImageView"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:srcCompat="@android:drawable/btn_star"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/contentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:padding="16dp"
            android:text="問題文を表示する"
            android:textSize="19sp"
            tools:layout_editor_absoluteY="171dp" />

        <Button
            android:id="@+id/optionButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選択肢1"
            tools:layout_editor_absoluteY="263dp" />

        <Button
            android:id="@+id/optionButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffb0c4de"

            android:text="選択肢2"
            tools:layout_editor_absoluteY="345dp" />

        <Button
            android:id="@+id/optionButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選択肢3"
            tools:layout_editor_absoluteY="426dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="407dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/contentImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp">

        <TextView
            android:id="@+id/countTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1問目"
            android:textColor="#FF000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/countTextView"
            app:srcCompat="@drawable/heartonline"
            tools:layout_editor_absoluteY="22dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            app:srcCompat="@drawable/heartonline"
            tools:layout_editor_absoluteY="22dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:srcCompat="@drawable/heartonline"
            tools:layout_editor_absoluteY="22dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:srcCompat="@drawable/heartonline"
            tools:layout_editor_absoluteY="22dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:srcCompat="@drawable/heartonline"
            tools:layout_editor_absoluteY="22dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:srcCompat="@drawable/heartonline"
            tools:layout_editor_absoluteY="22dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:srcCompat="@drawable/heartonline"
            tools:layout_editor_absoluteY="22dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:srcCompat="@drawable/heartonline"
            tools:layout_editor_absoluteY="22dp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:srcCompat="@drawable/heartonline"
            tools:layout_editor_absoluteY="22dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:srcCompat="@drawable/heartonline"
            tools:layout_editor_absoluteY="22dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
